{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "lib",
        "target": "es5",
        "module": "commonjs",
        "lib": ["DOM"],
        "allowJs": true,
        "outDir": "lib",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src"],
    "exclude": ["src/__tests__"]
}
